{% extends 'NoticiaBundle:Page:layout.html.twig' %}

{% block body %}
    <h3>Categorias
        <a class="btn btn-primary pull-right" href="{{ path('_categoria_cadastrar') }}">Nova</a>
    </h3>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <div class="panel-body">
        <!-- START table-responsive-->
        <div class="table-responsive table-bordered">
            <table class="table table-hover table-striped">
                <thead>
                <tr>
                    <th width="10%">#</th>
                    <th width="40%">Nome</th>
                    <th width="30%">Vers&atilde;o</th>
                    <th width="20%">A&ccedil;&otilde;es</th>
                </tr>
                </thead>
                <tbody>
                {% for categoria in categorias %}
                    <tr>
                        <td>{{ categoria.id }}</td>
                        <td>{{ categoria.nome }}</td>
                        <td>
                            {% if categoria.versao == 0  %}
                                Ambos
                            {% elseif categoria.versao == 1 %}
                                Web
                            {% elseif categoria.versao == 2 %}
                                Mobile
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path("_categoria_alterar", { 'categoria' : categoria.id }) }}" class="btn btn-sm btn-default">Editar</a>
                            <a href="{{ path("_categoria_excluir", { 'categoria' : categoria.id }) }}" class="btn btn-sm btn-warning">Excluir</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block sidebar %}
    <div class="well" style="margin-right: -140px;">
        <h4>Menu</h4>
        <div class="row">
            <div class="col-lg-6">
                <ul class="list-unstyled">
                    <li><a href="{{ path('_noticia_index') }}">Not&iacute;cias</a>
                    </li>
                    <li><a href="{{ path('_categoria_index') }}">Categoria</a>
                    </li>
                    <li><a href="{{ path('_historico_index') }}">Hist&oacute;rico</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}