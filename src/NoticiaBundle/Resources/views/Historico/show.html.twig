{% extends 'NoticiaBundle:Page:layout.html.twig' %}

{% block body %}
    <h3>
        Hist&oacute;rico
    </h3>
    <a class="btn btn-primary pull-left" href="{{ path('_historico_index') }}">Voltar</a>
    </br></br>
    <div class="panel-body">
        <!-- START table-responsive-->
        <div class="table-responsive table-bordered">
            <table class="table table-hover table-striped">
                <thead>
                <tr>
                    <th width="30%">T&iacute;tulo</th>
                    <th width="30%">Usu&aacute;rio</th>
                    <th width="20%">A&ccedil;&atilde;o</th>
                    <th width="20%">Data</th>
                </tr>
                </thead>
                <tbody>
                {% for historico in historicos %}
                    <tr>
                        <td>{{ historico.noticiaNome }}</td>
                        <td>{{ historico.usuario }}</td>
                        <td>{{ historico.acao }}</td>
                        <td><time datetime="{{  historico.data|date('c') }}">{{ historico.data|date('d/m/Y h:i') }}</time></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block sidebar %}
    <div class="well" style="margin-right: -140px;">
        <h4>Menu</h4>
        <div class="row">
            <div class="col-lg-6">
                <ul class="list-unstyled">
                    <li><a href="{{ path('_noticia_index') }}">Not&iacute;cias</a>
                    </li>
                    <li><a href="{{ path('_categoria_index') }}">Categoria</a>
                    </li>
                    <li><a href="{{ path('_historico_index') }}">Hist&oacute;rico</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}